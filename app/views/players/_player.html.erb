<div id="<%= dom_id player %>">
  <p>
    <strong>Name:</strong>
    <%= "#{player.first_name} #{player.last_name}" %>
  <br/>
    <strong>Birthdate:</strong>
    <%= player.birthdate %> (<%= player.age %> years old)
  <br/>
    <strong>Gender:</strong>
    <%= player.gender ? player.gender.name : "Unknown" %>
  </p>

  <% if player.device %>
  <p class='device_attributes'>
    <i>
      <%= "#{player.device.model} | #{player.device.operating_system.name} (#{player.device.os_version}) | #{player.device.locale.code}"%>
    </i>
  </p>
  <% end %>

</div>
